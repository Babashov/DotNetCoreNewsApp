@model IEnumerable<NewsManagementDotNetCoreApp.Models.SubCategory>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_LoginPartialButton")

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(m => m.Name)
        </th>

        <th>
            @Html.DisplayNameFor(m => m.Category.Name)
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(m => item.Name)
            </td>
            <td>
                @Html.DisplayFor(m => item.Category.Name)
            </td>
            <td>
                @Html.Partial("_TablePartialButtons", item.ID)
            </td>
        </tr>
    }

</table>

