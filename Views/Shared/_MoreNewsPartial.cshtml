@model IEnumerable<Post>

@foreach (var item in Model)
{
    <div class="col-md-4">
        <div class="feature_news_item">
            <div class="item">
                <div class="item_wrapper">
                    <div class="item_img">
                        <img class="img-responsive" style="width:263px; height:177px" src="@item.Image" alt="@item.Name">
                    </div><!--item_img-->
                    <div class="item_title_date">
                        <div class="news_item_title">
                            <h3><a href="~/home/readpost/@item.ID">@item.Name</a></h3>
                        </div><!--news_item_title-->
                        <div class="item_meta">@item.Date Sub Category:@item.SubCategory.Name</div>
                    </div><!--item_title_date-->
                </div><!--item_wrapper-->

            </div><!--item-->
        </div><!--feature_news_item-->
    </div><!--col-xs-4-->
}