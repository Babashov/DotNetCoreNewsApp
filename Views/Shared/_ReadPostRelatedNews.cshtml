@model IEnumerable<Post>

<div class="single_related_news">
    <div class="single_media_title"><h2>Related News</h2></div>
    <div class="media_wrapper">

        @foreach (var item in Model)
        {
            <div class="media">
                <div class="media-left">
                    <a href="~/home/readpost/@item.ID"><img style="width:80px;height:80px;" class="media-object" src="@item.Image" alt="@item.Name"></a>
                </div><!--media-left-->
                <div class="media-body">
                    <h4 class="media-heading">
                        <a href="~/home/readpost/@item.ID">
                            @item.Name
                        </a>
                    </h4>
                    <div class="media_meta">@item.Date, Sub Category: @item.Category.Name</div>
                </div><!--media-body-->
            </div><!--media-->
        }

    </div><!--media_wrapper-->
</div><!--single_related_news-->