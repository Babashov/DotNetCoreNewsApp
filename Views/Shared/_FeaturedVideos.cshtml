@model IEnumerable<Post>


<div class="feature_video_title"><h2>Featured Videos</h2></div>
<div id="feature_video_slider" class="owl-carousel">

    @foreach (var item in Model)
    {
        <div class="item">
            <div class="video_thumb"><img style="width:340px;height:188px" src="@item.Image" alt="@item.Name"></div>
            <div class="video_info">
                <div class="video_item_title"><h3><a href="~/home/readpost/@item.ID">@item.Name</a></h3></div><!--video_item_title-->
                <div class="item_meta">@item.Date</div><!--item_meta-->
            </div><!--video_info-->
        </div>
    }

</div><!--feature_video_slider-->